{
  "name": "pulse-js",
  "version": "1.0.0",
  "description": "A lightweight, declarative library for building dynamic HTML applications with 8 attributes",
  "main": "dist/pulse.js",
  "module": "dist/pulse.esm.js",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/pulse.esm.js",
      "require": "./dist/pulse.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin typescript",
    "dev": "rollup -c rollup.config.ts --configPlugin typescript -w",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^6.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "@rollup/plugin-typescript": "^12.0.0",
    "jsdom": "^25.0.0",
    "rollup": "^4.0.0",
    "tslib": "^2.8.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "keywords": ["pulse", "hypermedia", "html", "ajax", "declarative", "dom"],
  "license": "MIT"
}
